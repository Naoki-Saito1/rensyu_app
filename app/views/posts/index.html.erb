<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>URL</th>
      <th>言語</th>
      <th>作成日</th>
      
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.url %></td>
        <td><%= post.language %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: "本当に削除していいですか" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>